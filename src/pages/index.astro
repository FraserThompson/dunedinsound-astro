---
import GridContainer from 'src/components/GridContainer'
import BaseLayout from '../layouts/BaseLayout.astro'
import { loadAndFormatCollection } from 'src/util/collection'
import Tile from 'src/components/Tile.astro'
import { GridChild } from 'src/components/GridContainer.css'
import { theme } from 'src/Theme.css'

const gigs = await loadAndFormatCollection('gig')
---

<BaseLayout>
	<GridContainer>
		<div class="featured-gig">test</div>
		<div class="two-side-gigs">test</div>
		<div class="everything-else">
			<GridContainer>
				{
					gigs.map((gig) => (
						<Tile
							href={`${gig.extra.absolutePath}`}
							responsiveImage={gig.extra.cover}
							title={gig.entry.data.title}
							containerHeight="33vh"
							className={GridChild}
						/>
					))
				}
			</GridContainer>
			<GridContainer xs={6} sm={6} md={6} lg={6}>
				<Tile className={GridChild} containerHeight="10vh" href="/gigs" backgroundColor={theme.color.foreground}>
					More Gigs
				</Tile>
				<Tile className={GridChild} containerHeight="10vh" href="/blog" backgroundColor={theme.color.secondary}>
					More Articles
				</Tile>
			</GridContainer>
		</div>
	</GridContainer>
</BaseLayout>

<style>
	.featured-gig {
		grid-column: span 12;
	}
	.two-side-gigs {
		grid-column: span 12;
	}
	.everything-else {
		grid-column: span 12;
	}
	@media --md {
		.featured-gig {
			grid-column: span 8;
		}
		.two-side-gigs {
			grid-column: span 4;
		}
		.everything-else {
			grid-column: span 12;
		}
	}
</style>
