---
/**
 * Width restricted container for readable text.
 */
import { textContainer } from './TextContainer.css'

interface Props {
	style?: any
	className?: string
	light?: boolean
}

const { style, className, light } = Astro.props

---

<article class={`${textContainer} ${light ? 'light' : ''} ${className}`} style={style}>
	<slot />
</article>
