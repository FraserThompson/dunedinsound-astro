---
/**
 * GigImages: Displays all images from an artist from a gig.
 * LEGACY - uses an experimental approach which is no longer used.
 */

import { getEntry } from 'astro:content';
import Image2 from './Image2.astro';

interface Props {
  gigId: string;
  artistId: string;
}

const { gigId, artistId } = Astro.props;
const gigMedia = await getEntry('manifest', 'gig');
const images = gigMedia.data[gigId][artistId].images;
---

{images && Object.keys(images).map((src: string) => {
    const srcset = images[src]
    return <Image2 src={src} srcset={srcset}/>
})}
