<!-- Utility classes -->
<style is:global>
	.hidden {
		display: none !important;
	}

	.showMobile {
		display: inline-block !important;
	}

	.hideMobile {
		display: none !important;
	}

	.fullWidth {
		width: 100%;
	}

	@media (--md) {
		.showMobile {
			display: none !important;
		}
		.hideMobile {
			display: inline-block !important;
		}
		.hideMobile.flex {
			display: flex !important;
		}
	}

	.flex {
		display: flex;
	}

	.visible {
		display: inline-block;
	}

	.hidden {
		display: none;
	}
	.center {
		text-align: center;
	}

	.monospace {
		font-family: monospace;
	}

	.noPadding {
		padding: 0 !important;
		min-width: 0 !important;
		min-height: 0 !important;
	}

	.headerButton {
		width: 30px !important;
		height: 30px !important;
	}

	.left0 {
		left: 0;
		margin-left: 0;
	}
</style>
