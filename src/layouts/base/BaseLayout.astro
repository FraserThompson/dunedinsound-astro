---
/**
 * This is the base layout which all layouts should inherit from.
 *
 * Props:
 *  - hideFooter (optional): The footer will be hidden if true.
 *  - className (optional): Classes added to the content wrapper.
 *  - poo: SEO gubbins
 *
 * Slot:
 *  - default: All site content should go here.
 */
import SiteFooter from 'src/components/SiteFooter.astro'
import SiteHeader from 'src/components/SiteHeader.astro'
import SEO, { type Poo } from 'src/components/SEO.astro'
import '../../Theme.css.ts'
import './BaseLayout.css.ts'
import 'lightgallery/css/lightgallery.css'
import { Content, SiteContainer } from 'src/components/UtilClasses.css'
import { ClientRouter } from 'astro:transitions'
import siteIcon from 'src/assets/site-icon.jpg'

interface Props {
	hideFooter?: boolean
	hasSidebar?: boolean
	className?: string
	style?: Partial<CSSStyleDeclaration>
	poo: Poo
}

const { hideFooter, hasSidebar, style, className = '', poo } = Astro.props
---

<html lang="en" transition:animate="none">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/jpg" href={siteIcon.src} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, interactive-widget=resizes-content" />
		<meta name="theme-color" content="#08090C" />
		<meta name="generator" content={Astro.generator} />
		<SEO poo={poo} />
		<ClientRouter />
		<script type="application/javascript" is:inline>
			var global = window
		</script>
	</head>
	<body>
		<div class={SiteContainer[hideFooter ? 'hideFooter' : 'default']}>
			<SiteHeader transition:persist />
			<div class={`${Content} ${className}`} style={style}>
				<slot />
			</div>
		</div>
		{!hideFooter && <SiteFooter hasSidebar={hasSidebar} transition:persist />}
	</body>
</html>

<script is:inline>
	// Adds a loading spinner to the clicked element
	document.addEventListener('astro:before-preparation', (ev) => {
		const sourceElement = ev.sourceElement
		sourceElement?.classList.add('spinner')
	})
</script>

<style is:global>
	@keyframes spinner {
		to {
			transform-origin: 50% 50%;
			transform: rotate(360deg);
		}
	}
	.spinner:before {
		z-index: 15;
		content: '';
		box-sizing: border-box;
		position: absolute;
		top: 50%;
		left: 50%;
		width: 20px;
		height: 20px;
		margin-top: -10px;
		margin-left: -10px;
		border-radius: 50%;
		border: 2px solid #ccc;
		border-top-color: #000;
		animation: spinner 0.6s linear infinite;
	}
</style>

<script>
	import { navigate } from 'astro:transitions/client'
	import { elementIsVisibleInViewport } from 'src/util/helpers'

	interface StoredScrollPosition {
		collection: string
		position: number
		sidebarId?: string
	}

	/**
	 * On first load scroll to active element (since swap events aren't fired yet)
	 */
	document.addEventListener(
		'astro:page-load',
		() => {
			const sidebarMenu = document.querySelector('#sidebar-menu')
			const activeElement = sidebarMenu?.querySelector('.active')
			if (activeElement) {
				activeElement.scrollIntoView({ behavior: 'instant', block: 'center' })
			}
			sessionStorage.removeItem(`scrollPosition`)
		},
		{ once: true }
	)

	/**
	 * Before navigating, store the sidebar scroll position and active element ID
	 */
	document.addEventListener('astro:before-swap', () => {
		const collection = window.location.pathname.split('/')[1]
		const sidebarMenu = document.querySelector<HTMLElement>('#sidebar-menu')
		const scrollPosition = sidebarMenu?.scrollTop
		const activeElementId = sidebarMenu?.querySelector<HTMLElement>('.active')?.dataset?.sidebarid
		
		if (scrollPosition !== undefined && collection) {
			const storedScroll: StoredScrollPosition = {
				position: scrollPosition,
				collection: collection,
				sidebarId: activeElementId
			}
			sessionStorage.setItem(`scrollPosition`, JSON.stringify(storedScroll))
		}
	})

	/**
	 * After navigation, restore scroll position if in same collection.
	 * If navigating back to collection list page, also scroll body to that element.
	 */
	document.addEventListener('astro:after-swap', () => {
		const collection = window.location.pathname.split('/')[1]
		const pathDepth = window.location.pathname.split('/').length // includes trailing slash
		const scrollPosition = sessionStorage.getItem(`scrollPosition`)
		const storedScroll: StoredScrollPosition = scrollPosition ? JSON.parse(scrollPosition) : null

		const sidebarMenu = document.querySelector<HTMLElement>('#sidebar-menu')
		const activeElement = sidebarMenu?.querySelector<HTMLElement>('.active')

		// Restore scroll position if navigating within the same collection
		if (storedScroll && storedScroll.collection === collection && sidebarMenu) {
			sidebarMenu.scrollTo({
				top: storedScroll.position,
				behavior: 'instant'
			})

			// Ensure active element is visible (handles edge cases where scroll was interrupted)
			if (activeElement && !elementIsVisibleInViewport(activeElement, sidebarMenu)) {
				activeElement.scrollIntoView({ behavior: 'instant', block: 'center' })
			}

			// If navigating back to collection list page (depth <= 3), scroll body to element too
			if (pathDepth <= 3 && storedScroll.sidebarId) {
				navigate(`#${storedScroll.sidebarId}`, { history: 'replace' })
			}
		} else if (activeElement) {
			// Different collection or first visit - scroll to active element
			activeElement.scrollIntoView({ behavior: 'instant', block: 'center' })
		}

		sessionStorage.removeItem(`scrollPosition`)
	})
</script>
